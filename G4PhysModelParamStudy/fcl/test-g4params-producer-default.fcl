// #include "detectorDefaults.fcl"
process_name:processA

source: 
{
  module_type: EmptyEvent
  maxEvents:  2000
}

services: 
{

  message : 
  {
     debugModules : ["*"]
     suppressInfo : []    
     destinations : 
     {
       LogToConsole : 
       {
         type : "cout"
         threshold : "DEBUG"
         categories : 
	 {
           default : { limit : 50 }
         }
       }
     }
  }

  TFileService :
  {
    fileName: "G4BertiniParamDefault.root"
  }

  user: 
  {

     RandomNumberGenerator: {}
    
    // Action(s) for the simulation
//    ClockAction: {}

  }

}

outputs: 
{
   out1: 
   {
      module_type: RootOutput   
      fileName: "BertiniDefault.root"
   }
}

physics: {

  producers: 
  {

     PrimaryGenerator:
     {
        module_type: EventGenerator
	nparticles : 1
	momentum: [ 0., 0., 5. ] // in GeV 
     }

     G4BertiniDefault:
     {
        module_type: ModelParamStudyProducer
	//
        RNDMSeed: 54321
        TargetGeom:
        {
           targetSize: [ 0., 31.5, 1600. ]
	   targetPosition: [ 0, 0, 0 ]
	   targetMaterial: "Be"
	   targetShape: "G4Tubs"
        }
	PhysicsList: "QGSP_FTFP_BERT"
	Verbosity: 0
	DefaultPhysics: true
	BertiniConfig: []
     }

  }
  
  analyzers:
  {
  
     HARPDefault:
     {
        module_type: AnalyzerHARP
	ProductLabel: "G4BertiniDefault"
     }
  
  }
  
  path1:   [ PrimaryGenerator, G4BertiniDefault ] 
  path2:   [ HARPDefault  ]
  stream1: [ out1 ]

  trigger_paths: [ path1 ]
  //
  // NOTE: Remember, if you have an end_path, you should put your analyzer(s) there !
  //       Otherwise, they will NOT be included in the exec.
  //       If you don't have an end_path, things will magically work though... 
  //        
  end_paths:     [ path2, stream1 ]

}
