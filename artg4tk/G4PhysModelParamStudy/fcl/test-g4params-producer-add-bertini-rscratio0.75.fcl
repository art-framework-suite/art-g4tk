// #include "detectorDefaults.fcl"

process_name:processB

source: 
{
  module_type: RootInput
  maxEvents:  -1
  fileNames: [ "Evt-G4-Default.root" ]

}

services: 
{

  message : 
  {
     debugModules : ["*"]
     suppressInfo : []    
     destinations : 
     {
       LogToConsole : 
       {
         type : "cout"
         threshold : "DEBUG"
         categories : 
	 {
           default : { limit : 50 }
         }
       }
     }
  }

  RandomNumberGenerator: {}
  PhysicsListHolder: {}
  PhysicsList: 
  {
        PhysicsListName: "QGSP_FTFP_BERT"
  }
         
  PhysModelConfig: 
  {
//        Verbosity: true
  }
     
}

outputs: 
{
   outB: 
   {
      module_type: RootOutput   
      fileName: "Evt-G4-BertiniRScaleByRatio0.75.root"
   }
}

physics: {

  producers: 
  {
     
// Bertini RadiusScale variant
//
     G4BertiniRsc1:
     {
        module_type: ModelParamStudyProducer
	//
        RNDMSeed: 54321
        TargetGeom:
        {
           targetSize: [ 0., 3.15, 160. ]
	   targetPosition: [ 0, 0, 0 ]
	   targetMaterial: "Pb"
	   targetShape: "G4Tubs"
        }
	Verbosity: 0
	HadronicModelParameters:
	{
	   DefaultPhysics: false
	   Bertini:
	   {
//	      Verbosity: true
	      RadiusScaleByRatio: 0.75
	   }
	}
     }

  }
  
  analyzers:
  {
  
  }
  
  pathB:   [ G4BertiniRsc1 ] 
  streamB: [ outB ]

  trigger_paths: [ pathB ]
  //
  // NOTE: Remember, if you have an end_path, you should put your analyzer(s) there !
  //       Otherwise, they will NOT be included in the exec.
  //       If you don't have an end_path, things will magically work though... 
  //        
  end_paths:     [ streamB ]

}
