// #include "detectorDefaults.fcl"
process_name:processA

source: 
{
  module_type: EmptyEvent
  maxEvents:  1000
}

services: 
{

  message : 
  {
     debugModules : ["*"]
     suppressInfo : []    
     destinations : 
     {
       LogToConsole : 
       {
         type : "cout"
         threshold : "DEBUG"
         categories : 
	 {
           default : { limit : 50 }
         }
       }
     }
  }

  TFileService :
  {
    fileName: "HARPBertiniDefault.root"
  }

  user: 
  {

     RandomNumberGenerator: {}

//
// GDML-based geometry configuration will be released shortly
// At present we are double checking several technicalities of GDML
//
//     DetectorHolder: {}
//     GDMLDetector:
//     {
//        category: "world"
//	gdmlFileName_: "./gdml/be_target.gdml"
//     }

     PhysicsListHolder: {}
     PhysicsList: 
     {
        PhysicsListName: "QGSP_FTFP_BERT"
     }
     
     PhysModelConfig: 
     {
//        Verbosity: true
     }
         
  }

}

outputs: 
{
   out1: 
   {
      module_type: RootOutput   
      fileName: "Evt-G4-Default.root"
   }
}

physics: {

  producers: 
  {

     PrimaryGenerator:
     {
        module_type: EventGenerator
	nparticles : 1
	momentum: [ 0., 0., 5. ] // in GeV 
     }

     G4BertiniDefault:
     {
        module_type: ModelParamStudyProducer
	//
        RNDMSeed: 12345
//
// This is temporary use of (semi-)hard-coded geometry
// Will be replaced by GDML-based, run-time configurable component shortly
//
        TargetGeom:
        {
           targetSize: [ 0., 3.15, 160. ]
	   targetPosition: [ 0, 0, 0 ]
	   targetMaterial: "Pb"
	   targetShape: "G4Tubs"
        }
	
	Verbosity: 0
	HadronicModelParameters:
	{
	   DefaultPhysics: true
	}
     }

  }
  
  analyzers:
  {
  
     HARPTest:
     {
        module_type: AnalyzerHARP
	ProductLabel: "G4BertiniDefault"
     }
  
  }
  
  path1:   [ PrimaryGenerator, G4BertiniDefault ] 
  path2:   [ HARPTest  ]
  stream1: [ out1 ]

  trigger_paths: [ path1 ]
  //
  // NOTE: Remember, if you have an end_path, you should put your analyzer(s) there !
  //       Otherwise, they will NOT be included in the exec.
  //       If you don't have an end_path, things will magically work though... 
  //        
//  end_paths:     [ path2, stream1 ]
  end_paths:     [ stream1 ]


}
